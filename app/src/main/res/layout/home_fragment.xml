<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    tools:context=".home_fragment">
    <LinearLayout
        android:layout_width="300dp"
        android:alpha="0.7"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:translationZ="5dp"
        android:orientation="vertical"
        android:background="@drawable/frame_1">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车胎压力检测"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:layout_marginTop="15dp"
            android:translationZ="5dp"
            android:orientation="vertical"
            android:background="@drawable/frame_1">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="当前车胎胎压为："
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/whale_press"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:layout_marginTop="25dp"
            android:translationZ="5dp"
            android:orientation="vertical"
            android:background="@drawable/frame_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="1"
                    android:layout_weight="1"
                    android:text="当前车胎内温度为："
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/whale_temperate"
                    android:textColor="@color/black"
                    android:text="0"
                    android:textSize="30dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/light_green"
                android:layout_marginLeft="70dp"
                android:id="@+id/light_whale"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:text="当前轮胎状态正常"
                android:id="@+id/whale_message"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            
        </LinearLayout>
        

    </LinearLayout>


    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.7"
        android:background="@drawable/frame_1"
        android:elevation="3dp"
        android:orientation="vertical"
        android:translationZ="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="车锁检测"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/frame_1"
            android:elevation="3dp"
            android:orientation="vertical"
            android:translationZ="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="当前车锁情况为："
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lock_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/lock" />

                    <TextView
                        android:id="@+id/lock_state_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="车锁已打开"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/light_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/light_green" />

            <TextView
                android:id="@+id/lock_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:text="当前车锁状态正常"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>